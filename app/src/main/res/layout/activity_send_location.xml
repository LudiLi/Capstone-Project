<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cmu.capstone16fall.pe.dataservice.SendLocationActivity">

    <TextView
        android:id="@+id/wifi_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi access points and strength:" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latest_wifi"
        android:layout_marginTop="17dp"
        android:id="@+id/latest_wifi_info"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/latest_wifi"
        android:text="View Wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickViewLatestWifi"
        android:layout_below="@+id/wifi_info"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />
</RelativeLayout>
